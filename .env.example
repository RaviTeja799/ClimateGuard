# ClimateGuard Environment Configuration
# Copy this file to .env and fill in your API keys

# ====================================
# REQUIRED: Google AI API Key
# ====================================
# Get your free API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Set to FALSE for AI Studio, TRUE for Vertex AI
GOOGLE_GENAI_USE_VERTEXAI=FALSE

# ====================================
# OPTIONAL: Carbon Emission APIs
# ====================================

# Climatiq API - For emissions calculations
# Sign up free at: https://www.climatiq.io/
CLIMATIQ_API_KEY=4QDJ9YWA1156K6RVEQ4CYYHYAR

# ElectricityMaps API - For grid carbon intensity
# Community tier free at: https://www.electricitymaps.com/
ELECTRICITY_MAPS_API_KEY=caQWY9UBBYYFsgyYGtGq

# Google Maps API - For distance calculations
# Get from Google Cloud Console
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ====================================
# OPTIONAL: Vertex AI Deployment
# ====================================
GOOGLE_CLOUD_PROJECT=your_project_id_here
GOOGLE_CLOUD_LOCATION=global

# ====================================
# APP CONFIGURATION
# ====================================
APP_NAME=climateguard
DEBUG=FALSE
LOG_LEVEL=INFO
